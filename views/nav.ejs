

<section>
    <div class="max-w-4xl mx-auto flex flex-col justify-center items-center text-center py-4 bg-gradient-to-r from-blue-300 to-blue-600">
        <div class="flex flex-col justify-center items-center text-center text-white">
            <p class="font-bold text-lg"> Signup & Login System (Session & Cookie) </p>
            <p>
               <span class="font-bold">Tech Used: </span> Node.JS | Express | Express-session | BcryptJS | MogoDB Native Driver | EJS | Tailwind CSS
            </p>
        </div>
        <nav class="flex sm:flex-col md:flex-row space-x-4 justify-between items-center">
            <div class="flex space-x-4 mt-3">
                <a href="/" class="px-4 py-1 rounded font-bold border-2 border-white text-white">Home</a>
                <a href="/pr-1" class="px-4 py-1 rounded font-bold border-2 border-white text-white">Protected Route 1</a>
                <a href="/pr-2" class="px-4 py-1 rounded font-bold border-2 border-white text-white">Protected Route 2</a>
                <% if(!isLoggedIn) { %>
                    <a href="/login" class="px-4 py-1 rounded font-bold bg-green-600 text-white">Login</a>
                    <a href="/signup" class="px-4 py-1 rounded font-bold bg-blue-600 text-white">Signup</a>
                    <% } else { %>
                    <form action="/logout" method="POST">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button type="submit" class="px-4 py-1 rounded font-bold bg-red-600 text-white">Logout</button >
                    </form>
                <% } %>
            </div>
        </nav> 
    </div>
</section>