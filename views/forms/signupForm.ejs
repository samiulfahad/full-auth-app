<div class="py-6 flex flex-col justify-center sm:py-12">
    <div class="relative py-3 sm:max-w-xl sm:mx-auto">
        <div
            class="absolute inset-0 bg-gradient-to-r from-pink-300 to-pink-600 shadow-lg transform -skew-y-6 sm:skew-y-0 sm:-rotate-6 sm:rounded-3xl">
        </div>
        <div class="relative px-4 py-10 bg-white shadow-lg sm:rounded-3xl sm:p-20">
            <div class="max-w-md mx-auto">                
                <div>
                    <h1 class="text-2xl font-semibold mb-4">Signup Now</h1>
                </div>
                <form action="/signup" method="POST" class="divide-y divide-gray-200" novalidate>
                    <div class="py-1 text-base leading-6 space-y-4 text-gray-700 sm:text-lg sm:leading-7">
                        <div class="relative">
                            <input autocomplete="off" name="name" type="text" value="<%= oldData.name %>"
                                class="<%= errorFields.find( e => e === 'name') ? 'border-red-500' : '' %> peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600" placeholder="Your Name" />
                            <label for="name" class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">Your Name :</label>
                        </div>
                        <div class="relative">
                            <input type="email" name="email" type="text" value="<%= oldData.email %>"
                                class="<%= errorFields.find( e => e === 'email') ? 'border-red-500' : '' %> peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600" placeholder="Email address" required />
                            <label for="email" class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">Email :</label>
                        </div>
                        <div class="relative">
                            <input autocomplete="off" type="password" name="password" type="password" value="<%= oldData.password %>"
                                class="<%= errorFields.find( e => e === 'password') ? 'border-red-500' : '' %> peer placeholder-transparent h-10 w-full border-b-2 border-gray-300 text-gray-900 focus:outline-none focus:borer-rose-600" placeholder="Password" required />
                            <label for="password" class="absolute left-0 -top-3.5 text-gray-600 text-sm peer-placeholder-shown:text-base peer-placeholder-shown:text-gray-440 peer-placeholder-shown:top-2 transition-all peer-focus:-top-3.5 peer-focus:text-gray-600 peer-focus:text-sm">Password :</label>
                        </div>
                        <div class="relative text-center">
                            <button type="submit" class="bg-gradient-to-r from-pink-300 to-pink-600 text-white rounded-md px-5 py-1">Submit</button>
                        </div>
                        <p class="text-center">Registered? <a href="/login" class="text-pink-600 font-medium inline-flex space-x-1 items-center"><span>Login Now</span><span><svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                            </svg></span></a>
                        </p>
                    </div>
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                </form>
            </div>
        </div>
    </div>
</div>   